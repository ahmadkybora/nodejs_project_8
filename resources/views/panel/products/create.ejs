<%- include('../../layouts/panel/header'); %>
<div class="container">
    <div class="jumbotron">
        <!--//-->
        <%- include("../../errors/errorMessages.ejs") %>
        <form action="/panel/products/store" method="post">
            <!--//-->
            <div class="row">
                <div class="form-group col-md-4">
                    <select class="form-control"
                            name="brand_id"
                            id="brand-id">
                        <% for(let category of categories) { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <input type="text"
                           name="name"
                           id="name"
                           class="form-control"
                           placeholder="Name ...">
                </div>
                <div class="form-group col-md-4">
                    <input type="number"
                           name="price"
                           id="price"
                           class="form-control"
                           placeholder="Price ...">
                </div>
            </div>
            <!--//-->
            <div class="row">
                <div class="form-group col-md-12">
                    <textarea type="text"
                              class="form-control"
                              name="description"
                              id="description"
                              placeholder="Enter Description"></textarea>
                </div>
            </div>
            <!--//-->
            <div class="row">
                <div class="form-group col-md-6">
                    <input type="file"
                           name="image"
                           id="image"
                           class="form-control"
                           placeholder="Image ...">
                </div>
                <div class="form-group col-md-6">
                    <input type="radio"
                           name="status"
                           id="status"
                           class="form-control"
                           placeholder="Status ...">
                </div>
            </div>
            <!--//-->
            <div class="form-group">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
<%- include('../../layouts/panel/footer'); %>


